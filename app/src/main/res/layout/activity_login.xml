<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@id/tvLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/login" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/etEmailLogin"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins"
        android:text="You are Safe!!"
        android:textColor="?android:textColorPrimary"
        android:textSize="20dp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/etPassLogin"
        android:layout_centerInParent="true"
        android:layout_marginStart="50sp"
        android:layout_marginBottom="30dp"
        android:autofillHints="emailAddress"
        android:backgroundTint="@color/grey"
        android:ems="15"
        android:fontFamily="@font/poppins"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="?android:textColorTertiary" />

    <EditText
        android:id="@+id/etPassLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSignIn"
        android:layout_centerInParent="true"
        android:layout_marginStart="50sp"
        android:layout_marginBottom="120dp"
        android:autofillHints="password"
        android:backgroundTint="@color/grey"
        android:ems="15"
        android:fontFamily="@font/poppins"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="?android:textColorTertiary" />

    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="-100dp"
        android:fontFamily="@font/poppins"
        android:text="Forgot Password?"
        android:textColor="?android:colorPrimary" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/oval"
        android:fontFamily="@font/poppins"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="?android:textColorSecondary"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="50sp"
        android:layout_marginBottom="29dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:text="New User?"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tvNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="Sign up now."
            android:textColor="?android:colorPrimary" />

    </LinearLayout>

</RelativeLayout>